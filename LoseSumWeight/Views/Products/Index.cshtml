@model IEnumerable<LoseSumWeight.Models.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
            <img src="@item.ImagePath" alt="@item.Name" style="max-width: 100px; max-height: 100px;" />
             </td>
            
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Main" asp-action="SaveToCart" asp-route-id="@item.Id">Save to Cart</a> |
           </td>
          
        </tr>
}
    </tbody>
</table>
