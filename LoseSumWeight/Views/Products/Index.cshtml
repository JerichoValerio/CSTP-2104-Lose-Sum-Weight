@model IEnumerable<LoseSumWeight.Models.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>Products List</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Image
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
            <img src="@item.ImagePath" alt="@item.Name" style="max-width: 100px; max-height: 100px;" />
             </td>
            
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            @if (!item.IsFavorite)
            {
                        <a asp-controller="Products" asp-action="ToggleFavorite" asp-route-id="@item.Id" >Save to cart</a>
            }
             else
             {
                        <a asp-controller="Products" asp-action="ToggleFavorite" asp-route-id="@item.Id">Remove from cart</a>
             }
                
         </td>
          
        </tr>
           
}
    </tbody>
</table>
